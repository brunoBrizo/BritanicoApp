<Window x:Class="Instituto_Britanico.Vistas.BorrarBoton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Instituto_Britanico.Vistas"
        mc:Ignorable="d"
        Title="BorrarBoton" Height="450" Width="800">
    <Grid>

        <StackPanel Width="600" Background="LightGray" Height="400">
            <StackPanel Orientation="Horizontal">
                <Label>Ponele el nombre que quieras</Label>
                <TextBox x:Name="txtDato" Width="150" Background="White"></TextBox>
                <Button x:Name="botonQueHaceCosas" Content="Enviar" Click="BotonQueHaceCosas_Click"/>
            </StackPanel>
            <Button x:Name="botonLimpiar" Content="Limpiar" Click="botonLimpiar_Click" Margin="0,0,505,0"/>
            <TextBox x:Name="txtResultado" Height="266" Background="White" Margin="10,0,28,0"/>
        </StackPanel>
    </Grid>
</Window>
